
<!DOCTYPE html>
<html>
<head>
  <title>Layout Master</title>
  <link rel="stylesheet" type="text/css" href="/styles.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />

</head>
<body>
    <%- include('includes/sharedHeader') %>
    <div class="container zone red">
      <%if (user) {%>
      <div class="heading"><%= user.username %>'s Products:</div>
      <div class="parent-div">
        <% myProductInfo.forEach(function(product) { %>
      
          <div class="product-container">
            <img src="<%= product.image%>" alt="Product Image">
            <div class="product-info">
                <h2>Product Title:<%= product.title %></h2>
                <p class="price">Product Info:<%= product.price %></p>
                <p class="description">Product Description: <%= product.description%></p>
                <a href="/productDetails/<%= product._id %>">View Details</a>
            </div>
        </div>
      
        <%})%>
     </div>
      <%} else { %>
        <div>Welcome Guest</div>        
      <%} %>
    </div>
    

  
  <div class="zone blue grid-wrapper">
    <div class="heading">Products:</div>
  
    <%if (user) {%>

      <% otherProductInfo.forEach(function(product) { %>
      
        <div class="product-container">
          <img src="<%= product.image%>" alt="Product Image">
          <div class="product-info">
              <h2>Product Title:<%= product.title %></h2>
              <p class="price">Product Info:<%= product.price %></p>
              <p class="description">Product Description: <%= product.description%></p>
              <a href="/productDetails/<%= product._id %>">View Details</a>
          </div>
        </div>
  
      <%})%>
      <%} else { %>
        <% allProductInfo.forEach(function(product) { %>
      
          <div class="product-container">
            <img src="<%= product.image%>" alt="Product Image">
            <div class="product-info">
                <h2>Product Title:<%= product.title %></h2>
                <p class="price">Product Info:<%= product.price %></p>
                <p class="description">Product Description: <%= product.description%></p>
                <a href="/productDetails/<%= product._id %>">View Details</a>
            </div>
          </div>   
        <%})%>   
      <%} %>
  </div>
  <%- include('includes/footer') %>

